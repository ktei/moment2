.header
  - if signed_in?
    %ul.nav.nav-pills.pull-right
      %li
        %a{href: '#'} Gallery
      %li
        %a{href: '#'} Library
      %li.dropdown
        %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}, class: 'user-links'}
          = image_tag current_user.avatar.url(:thumb), :style => 'width:25px;'
          %b.caret
        %ul.dropdown-menu
          %li
            = link_to 'Edit profile', profile_path
          %li
            = link_to 'Sign out', sign_out_path, method: :delete
    %h3.text-muted Moment
  - else
    %ul.nav.nav-pills.pull-right
      %li
        = link_to 'Log in', sign_in_path
      %li
        = link_to 'Sign up', sign_up_path
    %h3.text-muted Moment

